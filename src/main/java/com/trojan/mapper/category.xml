<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.trojan.mapper.CategoryMapper">
	<select id="selectById" resultType="Category">
		select cId,cName
		from category
		where cId=1
	</select>
	<select id="selectAll" resultType="java.util.HashMap">
		select cId,cName
		from category
	</select>
	<select id="selectCateByName" parameterType="java.lang.String"
		resultType="Category">
		select cId,cName
		from category where cName=#{cName}
	</select>

	<insert id="addCategory" parameterType="Category">
		insert into category
		(cName) values(#{cName})
	</insert>

</mapper>